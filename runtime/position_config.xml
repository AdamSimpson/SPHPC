/* positions_config.xml */

<?xml version="1.0"?>

<adios-config host-language="C">
  <adios-group name="position" coordination-communicator="MPI_COMM_WORLD">
    <var name="particle_count" type="integer"/>
    <var name="x" type="double" dimensions="particle_count"/>
    <var name="y" type="double" dimensions="particle_count"/>
    <var name="z" type="double" dimensions="particle_count"/>
    <attribute name="description" type="string" value="SPH x,y,z positions"/>
  </adios-group>

<method group="position" method="MPI_LUSTRE"/> <buffer size-MB="100" allocate-time="now"/> </adios-config>
